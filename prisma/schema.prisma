generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(cuid())
  name     String?
  email    String?   @unique
  password String?
  image    String?
  emailVerified DateTime?
  googleId String?  @unique
  picture  String?
  provider String?  @default("email")

  groups         GroupMember[]
  expensesPaid   Expense[]
  splits         ExpenseSplit[]
  settlementsFrom   Settlement[] @relation("FromUser")  
  settlementsTo     Settlement[] @relation("ToUser") 
  messages       Message[]    @relation("SentMessages")
  createdAt         DateTime     @default(now())
}

model Group {
  id     String    @id @default(cuid())
  name   String
  members  GroupMember[]
  expenses  Expense[]
  settlements  Settlement[] 
  conversation Conversation?
  createdAt DateTime    @default(now())
}

model GroupMember {
  id       String   @id @default(cuid())
  groupId  String
  userId   String
  role     String   @default("member")

  group    Group    @relation(fields: [groupId], references: [id], onDelete: Cascade)
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([groupId, userId]) 
}

model Expense {
  id          String          @id @default(cuid())
  description String
  amount      Decimal
  paidById    String
  groupId     String
  createdAt   DateTime        @default(now())

  paidBy      User            @relation(fields: [paidById], references: [id], onDelete: Cascade)
  group       Group           @relation(fields: [groupId], references: [id], onDelete: Cascade)
  splits      ExpenseSplit[]
}

model ExpenseSplit {
  id          String   @id @default(cuid())
  expenseId   String
  userId      String
  amountOwed  Decimal

  expense     Expense  @relation(fields: [expenseId], references: [id], onDelete: Cascade)
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Settlement {
  id           String   @id @default(cuid())
  fromUserId   String
  toUserId     String
  groupId      String?
  amount       Decimal
  status       String   @default("PENDING") // PENDING, PAID
  createdAt    DateTime @default(now())

  fromUser     User     @relation("FromUser", fields: [fromUserId], references: [id], onDelete: Cascade)
  toUser       User     @relation("ToUser", fields: [toUserId], references: [id], onDelete: Cascade)
  group        Group?   @relation(fields: [groupId], references: [id], onDelete: Cascade)
}

model Conversation {
  id        String    @id @default(cuid())
  groupId   String    @unique // One conversation per group
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  group     Group     @relation(fields: [groupId], references: [id], onDelete: Cascade)
  messages  Message[]
}

model Message {
  id             String       @id @default(cuid())
  conversationId String
  senderId       String
  content        String
  messageType    String       @default("TEXT") 
  createdAt      DateTime     @default(now())

  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  sender         User         @relation("SentMessages", fields: [senderId], references: [id], onDelete: Cascade)
}

